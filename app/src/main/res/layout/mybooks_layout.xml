<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/MyBooksLayout"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/MyBooksCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_4sdp">
        <ImageView
            android:id="@+id/myBookImage"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_160sdp"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_52sdp"
            android:paddingTop="@dimen/_2sdp"
            android:paddingBottom="@dimen/_20sdp"
            android:paddingLeft="@dimen/_30sdp"
            android:paddingRight="@dimen/_2sdp"
            android:id="@+id/delete"
            android:layout_marginStart="@dimen/_52sdp"
            android:paddingEnd="@dimen/_2sdp"
            android:paddingStart="@dimen/_30sdp">
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                app:contentPadding="@dimen/_2sdp"
                android:backgroundTint="@color/white"
                android:background="@color/white"
                android:outlineAmbientShadowColor="@color/purple"
                android:elevation="@dimen/_10sdp"
                app:cardCornerRadius="@dimen/_40sdp"
                android:layout_marginStart="@dimen/_5sdp">
                <ImageView
                    android:layout_width="@dimen/_5sdp"
                    android:layout_height="@dimen/_5sdp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/delete"
                    android:background="#ffffff"
                    android:layout_alignParentEnd="true" />
            </androidx.cardview.widget.CardView>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/myBookTitle"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_170sdp"
        android:textSize="12sp" />
</RelativeLayout>