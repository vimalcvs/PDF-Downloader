<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SplashScreenTheme" parent = "Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>
    <style name="TextAppearance.ShowcaseView.Detail" parent="android:style/TextAppearance">
        <item name="android:textSize">@dimen/_15sdp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="TextAppearance.ShowcaseView.Title" parent="android:style/TextAppearance">
        <item name="android:textSize">@dimen/_25sdp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/holo_blue_bright</item>
    </style>
    <style name="ShowcaseView">
        <item name="sv_backgroundColor">@color/cardview_dark_background</item>
    </style>
    <style name="SearchView" parent="Widget.AppCompat.SearchView">
        <item name="colorControlActivated">#FFffffff</item>
    </style>

</resources>